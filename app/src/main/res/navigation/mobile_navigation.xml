<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/destination_home">

    <fragment
        android:id="@+id/destination_home"
        android:name="com.thisiskelechi.navigationcomponent.HomeFragment"
        android:label="home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/destination_camera"
        android:name="com.thisiskelechi.navigationcomponent.CameraFragment"
        android:label="camera"
        tools:layout="@layout/fragment_camera">
        <action
            android:id="@+id/next_action"
            app:destination="@id/destination_photos" />
    </fragment>
    <fragment
        android:id="@+id/destination_photos"
        android:name="com.thisiskelechi.navigationcomponent.PhotosFragment"
        android:label="photos"
        tools:layout="@layout/fragment_photos">
        <action
            android:id="@+id/next_action"
            app:destination="@id/destination_home" />
        <argument
            android:name="numOfPhotos"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/destination_settings"
        android:name="com.thisiskelechi.navigationcomponent.SettingsFragment"
        android:label="settings"
        tools:layout="@layout/fragment_settings" />
</navigation>